<!DOCTYPE html>
<html>
<head>
  <title>Task Manager</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= user.username %>!</h1>
    <a href="/auth/logout">Logout</a>
    <a href="/tasks/create" class="btn">Create New Task</a>

    <h2>Your Tasks</h2>
    <ul>
      <% if (tasks.length === 0) { %>
        <li>No tasks found. Add one now!</li>
      <% } else { %>
        <% tasks.forEach((task) => { %>
          <li>
            <strong><%= task.task_name %></strong> - <%= task.description %> (Deadline: <%= task.deadline %>)
            [<%= task.status %>]
            <form action="/tasks/delete/<%= task.id %>" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </li>
        <% }) %>
      <% } %>
    </ul>
  </div>
</body>
</html>
